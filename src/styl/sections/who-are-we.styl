.who
  &-cover
    background-image url("../img/backgrounds/bg-who-cover.jpg")
    background-position center
    background-repeat no-repeat
    background-size cover
    height 560px
    position relative

    &-card
      background-color $hwhite
      display flex
      flex-direction column
      height 400px
      justify-content center
      left 100px
      padding 0 60px
      position absolute
      top 80px
      width 545px

    &-title
      color $hblackMedium
      font-size $fs47
      line-height 46px
      margin-bottom 25px
      text-align right

    &-desc
      color $hblack
      font-size $fs18
      letter-spacing 0.5px
      line-height 25px
      text-align right

  &-timeline
    background-image url("../img/backgrounds/bg-hexagon-left.png")
    background-position top left
    background-repeat no-repeat
    background-size 300px
    margin 50px 0 100px 0

    &-container
      display flex
      flex-direction column
      height 895px
      overflow hidden
      margin 0 auto
      max-width 1200px
      position relative

      &:after
        content ''
        position absolute
        width 2px
        background-color $hgrayDots
        top 0
        bottom 0
        left 50%
        margin-left 0
        opacity 0.6

    &-content
      position relative

      &:nth-child(n + 2) > .who-timeline-year-container
        padding-bottom 84px

    &-info
      margin-top -47px

      &-container
        background-color inherit
        padding 10px 40px
        position relative
        width 50%

        &:after
          background-color $hgrayDots
          border-radius 100px
          content ''
          height 2px
          position absolute
          right -1px
          top 22px
          width 18px
          z-index 1

        &.left
          left 0
          text-align right

        &.right
          left 50%
          text-align left

        &.right::after
          left 1px

    &-title
      color $hblackMedium
      font-size $fs47
      line-height 46px
      margin-bottom 25px
      text-align center

    &-year
      color $hblackLight
      font-size $fs18
      letter-spacing 0.5px

      &-container
        display flex
        justify-content center
        padding-bottom 20px

      &-capsule
        background-color $hgrayDots
        border-radius 3px
        padding 5px 0
        text-align center
        width 80px
        z-index 1

    &-icon
      &-container
        margin-bottom 12px

      &-height
        height 36.2px

      &-2016
        &-jan
          height 25.35px
          width 21px

        &-nov
          height 26.31px
          width 22px

      &-2017
        &-feb
          height 24.08px
          width 23px

        &-oct
          height 36.2px
          width 39px

    &-month
      color $hblackLight
      font-size $fs18
      letter-spacing 0.5px

      &-container
        margin-bottom 12px

    &-desc
      color $hblack
      font-size $fs18
      letter-spacing 0.5px
      line-height 25px
      margin-bottom 12px

    &-collapsible
      background-image url("/img/icons/icon-circle-arrow.png")
      background-repeat no-repeat
      background-size cover
      cursor pointer
      height 30px
      width 30px

      &-container
        margin 50px auto 0 auto
        width 30px

  &-team
    background-color $hgrayVariant
    padding 60px 0

    &-title
      color $hblack
      font-size $fs47
      line-height 46px
      text-align center

    &-desc
      color $hblackMedium
      font-size $fs19
      letter-spacing 0.5px
      line-height 25px
      margin 25px auto 0 auto
      max-width 740px
      text-align center

  &-modal
    background-color rgba(0,0,0,0.4)
    display none
    left 0
    height 100%
    overflow auto
    position fixed
    top 0
    width 100%
    z-index 12

    &-close
      height 50px
      width 50px

      &-container
        cursor pointer
        height 50px
        position absolute
        right -25px
        top -26px

    &-content
      background-color #fefefe
      border 1px solid #888
      margin auto
      padding 0 50px 40px 50px
      position relative

    &-header
      align-items center
      background-color $hpink
      display flex
      height 40px
      justify-content center
      margin 0 auto
      width 425px

      &-title
        color $hwhite
        font-size $fs17

    &-body
      display flex
      flex-direction row
      margin-top 45px

      & #column-left
        margin-right 50px

    &-desc
      color $hblack
      font-size $fs18
      letter-spacing 0.5px
      line-height 25px
      margin-bottom 12px
      text-align justify

  &-card
    height 310px
    position relative
    width 310px

    &-container
      display flex
      flex-wrap wrap
      margin 60px auto 0 auto
      max-width 1304px

    &-carousel
      display none !important

    &-content
      margin 0 8px 35px 8px
      width 310px

    &-img
      height 310px
      width 310px

    &-hover
      align-items center
      bottom 0
      display flex
      flex-direction column
      justify-content center
      left 0
      opacity 0
      padding 0 30px
      position absolute
      right 0
      top 0
      transition 0.3s

      &:hover
        background-color $hpink
        opacity 0.8
        transition 0.3s

    &-category
      color $hwhite
      font-size $fs20
      margin-bottom 20px
      text-align center

    &-icon
      cursor pointer
      height 35px
      width 35px

    &-member
      color $hblack
      font-size $fs20
      margin 20px 0 10px 0

    &-job
      color $hblackMedium
      font-size $fs20

    &-email
      color $hblackMedium
      font-size $fs15

  &-work
    background-color $hgrayLight
    padding 70px 0

    &-title
      color $hblack
      font-size $fs45
      text-align center

    &-card
      background-color $hwhite
      height 400px
      margin 0 auto
      padding-top 60px
      width 1000px

      &-carousel
        margin 60px auto 50px auto
        position relative
        width 1000px

        & .owl-prev,
        & .owl-next
          position absolute
          top 205px

        & .owl-prev
          left -80px

        & .owl-next
          right -80px

        & .owl-dots
          display flex
          justify-content center
          margin-top 55px

        & .owl-dot
          background-color $hgrayDots !important
          border solid 1px $hgrayDots !important
          border-radius 100px
          height 9px
          margin 0 5px
          width 9px

        & .owl-dot.active
          background-color transparent !important
          border solid 1px $hgrayBorder !important
          height 10px
          width 10px

      &-title
        color $hblack
        font-size $fs38
        text-align center

      &-desc
        color $hblackMedium
        font-size $fs19
        letter-spacing 0.5px
        line-height 25px
        margin 0 auto 50px auto
        max-width 865px
        text-align center

      &-btns
        display flex
        justify-content center

        & #btn-requirements
          margin-right 40px

    &-navigation
      height 22px
      width auto

    &-separator
      background-color $hpink
      height 2px
      margin 25px auto 40px auto
      width 65px

    &-cv
      color $hblack
      font-size $fs25
      text-align center
      margin-bottom 6px

    &-email
      color $hblack
      font-size $fs38
      text-align center

.modal
  background transparent
  max-width 100%
  padding 0
  width 80%

.modal a.close-modal
  background-image url("../img/icons/icon-close-modal.png")
  height 50px
  right -25px
  top -25px
  width 50px

.blocker
  z-index 13

.month-pink
  color $hpink !important

@media screen and (max-width 1318px)
  .who
    &-card
      &-container
        max-width 978px

    &-work
      &-card
        height auto
        padding 60px 40px
        width 100%

        &-carousel
          width 84%

          & .owl-prev
            left -50px

          & .owl-next
            right -50px

@media screen and (max-width 992px)
  .who
    &-card
      &-container
        max-width 652px

    &-modal
      &-desc
        &-container
          height 410px
          overflow auto

    &-work
      &-card
        &-btns
          & a button
            width 204px

  .modal
    width 95%

@media screen and (max-width 820px)
  .who
    &-card
      &-img
        height auto
        max-width 310px
        width 100%

    &-modal
      &-content
        padding 0 25px 20px 25px

      &-header
        max-width 425px
        width 100%

      &-body
        flex-direction column

        & #column-left
          margin-right 0

      &-desc
        &-container
          height auto
          margin-top 30px
  

@media screen and (max-width 666px)
  .who
    &-cover
      align-items center
      display flex
      justify-content center

      &-card
        height auto
        margin 0 30px
        padding 60px 60px 60px 40px
        position initial
        width 100%

      &-desc
        font-size $fs15

    &-timeline
      &-container:after
        left 60px

      &-content
        padding 0 25px 80px 60px
        width 100%

      &-year
        &-container
          justify-content flex-start
          margin-left -42px

      &-info
        &-container
          width 100%

          &.left::after, .right::after
            left 1px

          &.left
            text-align left

          &.right
            left 0%

    &-team
      padding 60px 0 90px 0

      &-desc
        font-size $fs17
        padding 0 30px

    &-card
      width 310px

      &-container
        display none

      &-carousel
        display block !important
        margin 50px auto 0 auto
        width 310px

        & .owl-prev,
        & .owl-next
          bottom -60px
          margin 0 auto
          position absolute
          width 32px

        & .owl-prev
          left 0
          right 80px

        & .owl-next
          left 80px
          right 0

        & .owl-dots
          display flex
          justify-content center
          margin-top 10px

        & .owl-dot
          background-color $hgrayDots !important
          border solid 1px $hgrayDots !important
          border-radius 100px
          height 9px
          margin 0 5px
          width 9px

        & .owl-dot.active
          background-color transparent !important
          border solid 1px $hgrayBorder !important
          height 10px
          width 10px

      &-icon
        width 35px !important

      &-content
        margin 0 0 35px 0

    &-work
      &-card
        &-desc
          font-size $fs17

        &-carousel
          margin-bottom 130px

          & .owl-prev,
          & .owl-next
            bottom -75px
            margin 0 auto
            top initial
            width 32px

          & .owl-prev
            left 0
            right 80px

          & .owl-next
            left 80px
            right 0

        &-btns
          align-items center
          flex-direction column

          & #btn-requirements
            margin 0 0 30px 0
