.allies
  &-cover
    background-image url("../img/backgrounds/bg-allies.png")
    background-position left
    background-repeat no-repeat
    background-size contain
    display flex
    height 482px
    justify-content flex-end
    padding 100px 200px 0 0

    &-title
      color $hblackMedium
      font-size $fs47
      margin-bottom 40px

    &-desc
      color $hblack
      font-size $fs18
      letter-spacing 0.5px
      line-height 25px

      &-container
        width 475px

  &-cards
    display flex
    flex-wrap wrap
    justify-content space-between
    margin 132px auto 138px auto
    width 1041px

    &-content
      align-items center
      box-shadow 0 11px 56px 0 rgba(0, 0, 0, 0.19)
      display flex
      height 283px
      justify-content center
      margin-bottom 39px
      position relative
      width 317px

    &-hover
      align-items center
      bottom 0
      display flex
      flex-direction column
      justify-content center
      left 0
      opacity 0
      padding 0 43px
      position absolute
      right 0
      top 0
      transition 0.3s

      &:hover
        background-color $hpink
        opacity 1
        transition 0.3s

    &-title
      color $hwhite
      font-size $fs15
      letter-spacing 0.4px
      line-height 17px
      margin-bottom 10px
      text-align center

    &-desc
      color $hwhite
      font-size $fs13
      letter-spacing 0.4px
      line-height 17px
      text-align center

  &-logo
    &-axa
      height 131px
      width 131px

    &-imss
      height 149px
      width 126px

    &-stanford
      height 84px
      width 179px

    &-ycombinator
      height 42px
      width 204px

    &-kowa
      height 79px
      width 164px

    &-kio
      height 93px
      width 122px

    &-beeva
      height 113px
      width 165px

    &-molex
      height 80px
      width 171px

    &-tomatelopecho
      height 126px
      width 191px

    &-tepozrosa
      height 135px
      width 182px

    &-nsf
      height 140px
      width 146px

    &-google
      height 56px
      width 165px

@media screen and (min-width 750px) and (max-width 1100px)
  .allies
    &-cards
      width 679px

@media screen and (max-width 749px)
  .allies
    &-cover
      background-size cover
      height 269px
      padding 55px 0 0 0

      &-info
        margin 0 auto
        width 367px

      &-title
        margin-bottom 10px

      &-desc
        font-size $fs15
        letter-spacing 0.2px
        line-height 21px

        &-container
          width auto

    &-cards
      width 367px

      &-content
        height 152px
        width 171px

      &-hover
        padding 20px

        &-content
          height 152px
          overflow auto

    &-logo
      &-axa
        height 70px
        width 70px

      &-imss
        height 80px
        width 68px

      &-stanford
        height 45px
        width 96px

      &-ycombinator
        height 26px
        width 125px

      &-kowa
        height 42px
        width 88px

      &-kio
        height 60px
        width 79px

      &-beeva
        height 60px
        width 89px

      &-molex
        height 43px
        width 92px

      &-tomatelopecho
        height 67px
        width 103px

      &-tepozrosa
        height 72px
        width 98px

      &-nsf
        height 75px
        width 78px

      &-google
        height 30px
        width 89px

@media screen and (max-width 449px)
  .allies
    &-cover
      &-info
        width 260px

      &-title
        font-size $fs38

      &-desc
        font-size $fs13

    &-cards
      margin 70px auto 40px auto
      width 171px
