.allies
  &-cover
    background-image url("../img/backgrounds/bg-allies.png")
    background-position left
    background-repeat no-repeat
    background-size contain
    display flex
    height 400px
    justify-content flex-end
    padding 100px 200px 0 0

    &-title
      color $hpink
      font-size $fs47
      margin-bottom 40px

    &-desc
      color $hblack
      font-size $fs18
      letter-spacing 0.5px
      line-height 25px

      &-container
        width 475px

  &-cards
    display flex
    flex-wrap wrap
    justify-content space-between
    margin 132px auto 138px auto
    width 1041px

    &-carousel
      display none !important

    &-content
      align-items center
      box-shadow 0 11px 56px 0 rgba(0, 0, 0, 0.19)
      display flex
      height 283px
      justify-content center
      margin-bottom 39px
      position relative
      width 317px

    &-hover
      align-items center
      bottom 0
      display flex
      flex-direction column
      justify-content center
      left 0
      opacity 0
      padding 0 43px
      position absolute
      right 0
      top 0
      transition 0.3s

      &:hover
        background-color $hpink
        cursor default
        opacity 1
        transition 0.3s

    &-title
      color $hwhite
      font-size $fs15
      letter-spacing 0.4px
      line-height 17px
      margin-bottom 10px
      text-align center

    &-desc
      color $hwhite
      font-size $fs13
      letter-spacing 0.4px
      line-height 17px
      text-align center

  &-logo
    &-axa
      height 131px
      width 131px

    &-imss
      height 139px
      width 110px

    &-stanford
      height 49px
      width 179px

    &-ycombinator
      height 131px
      width 131px

    &-kowa
      height 73px
      width 164px

    &-kio
      height 70px
      width 122px

    &-beeva
      height 95px
      width 163px

    &-molex
      height 120px
      width 160px

    &-tomatelopecho
      height 121px
      width 212px

    &-tepozrosa
      height 118px
      width 182px

    &-nsf
      height 150px
      width 150px

    &-google
      height 55px
      width 167px

  &-donors
    background-color $hgrayLight
    padding 50px 0 70px 0

    &-title
      color $hpink
      font-size $fs45
      padding 0 30px
      text-align center

    &-desc
      color $hblack
      font-size $fs17
      line-height 25px
      margin 30px auto 60px auto
      max-width 750px
      text-align center

    &-container
      display flex
      flex-direction row
      justify-content center
      height 235px
      overflow hidden
      position relative

    &-content
      display flex
      flex-direction column
      width 270px

      &:nth-child(2)
        margin 0 10px

    &-name
      color $hblack
      font-size $fs17
      line-height 26px
      text-align center
      transition 0.3s

      &:hover
        color $hpink
        font-weight $bold
        transition 0.3s

    &-collapsible
      background-image url("/img/icons/icon-circle-arrow.png")
      background-repeat no-repeat
      background-size cover
      cursor pointer
      height 30px
      width 30px

      &-container
        margin 30px auto 0 auto
        width 30px

    &-fadeout
      bottom 0
      height 85px
      background: linear-gradient(
        rgba(244, 244, 244, 0) 0%,
        rgba(244, 244, 244, 1) 100%)
      position absolute
      width 100%

@media screen and (min-width 750px) and (max-width 1100px)
  .allies
    &-cards
      width 679px

@media screen and (max-width 900px)
  .allies
    &-donors
      &-title
        font-size $fs38
        line-height 40px

      &-desc
        font-size $fs15
        padding 0 30px

      &-container
        flex-direction column

      &-content
        overflow hidden
        width auto

      &-fadeout
        z-index 1

@media screen and (max-width 749px)
  .allies
    &-cover
      background-size cover
      height 269px
      padding 55px 0 0 0

      &-info
        margin 0 auto
        width 367px

      &-title
        margin-bottom 10px

      &-desc
        font-size $fs15
        letter-spacing 0.2px
        line-height 21px

        &-container
          width auto

    &-cards
      width 367px
      display none

      &-carousel
        display block !important
        margin 50px auto 110px auto
        position relative
        width 230px

        & .owl-stage-outer
          overflow visible

        & .owl-item
          opacity 0
          transition opacity 0.3s

        & .owl-item.active
          opacity 1
          visibility visible

        & .owl-item
          visibility hidden

        &-navigation
          height 30px
          width 20px

        & .owl-prev,
        & .owl-next
          bottom -70px
          height 30px
          margin auto
          position absolute
          width 20px

        & .owl-prev
          left -55px
          right 0

        & .owl-next
          left 0
          right -55px

        & .owl-dots
          bottom -10px
          display flex
          justify-content center
          left 0
          position absolute
          right 0

        & .owl-dot
          background-color $hgrayDots !important
          border solid 1px $hgrayDots !important
          border-radius 100px
          height 9px
          margin 0 5px
          width 9px

        & .owl-dot.active
          border solid 1px $hgrayBorder !important
          background-color transparent !important
          height 10px
          width 10px

      &-content
        height 215px
        width 230px

      &-hover
        padding 20px

        &-content
          height 152px
          overflow auto

    &-logo
      &-axa
        height 95px
        width 95px !important

      &-imss
        height 121px
        width 96px !important

      &-stanford
        height 37px
        width 135px !important

      &-ycombinator
        height 100px
        width 100px !important

      &-kowa
        height 54px
        width 122px !important

      &-kio
        height 71px
        width 123px !important

      &-beeva
        height 66px
        width 113px !important

      &-molex
        height 83px
        width 110px !important

      &-tomatelopecho
        height 74px
        width 130px !important

      &-tepozrosa
        height 82px
        width 127px !important

      &-nsf
        height 90px
        width 90px !important

      &-google
        height 43px
        width 130px !important

@media screen and (max-width 449px)
  .allies
    &-cover
      &-info
        width 260px

      &-title
        font-size $fs38

      &-desc
        font-size $fs13

    &-cards
      margin 70px auto 40px auto
      width 171px
