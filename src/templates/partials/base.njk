<!DOCTYPE html>
<html>
  <head>
    {% include 'seo/googleanalytics.njk' %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    {% include 'seo/metatags.njk' %}
    {% block extra_css %}{% endblock %}
    <link rel="stylesheet" href="/css/{{ projectFilesName }}.libs.css">
    <link rel="stylesheet" href="/css/main.css">
    <title>Higia | {% block title %}{% endblock %}</title>
    <link runat="server" rel="shortcut icon" href="img/favicon/" type="image/x-icon"/>
    <link runat="server" rel="icon" href="img/favicon/" type="image/ico"/>
    {% include 'seo/facebookpixel.njk' %}
  </head>
  <body>
    <div id="page">
      {% if section == 'es/index' or section == 'index' or section == 'es/who-are-we' or section == 'es/eva' or section == 'es/allies' or section == 'es/research' or section == 'es/news' or section == 'es/contact' %}
        {% include 'partials/navbar.njk' %}
      {% else %}
        {% include 'partials/navbar-en.njk' %}
      {% endif %}
      <main>
        {% block content %}{% endblock %}
      </main>
      {% if section == 'es/index' or section == 'index' or section == 'es/who-are-we' or section == 'es/eva' or section == 'es/allies' or section == 'es/research' or section == 'es/news' or section == 'es/contact' %}
        {% include 'partials/footer.njk' %}
      {% else %}
        {% include 'partials/footer-en.njk' %}
      {% endif %}
    </div>
    {% block js_libs_config %}
    {% endblock %}
    <script src="/js/{{ projectFilesName }}.libs.js"></script>
    {% block js_project_config %}
    {% endblock %}
    <script src="/js/{{ projectFilesName }}.js"></script>
    {% block js_inline %}
    {% endblock %}
  </body>
</html>
