{% extends "partials/base.njk" %}

{% block title %}Aliados{% endblock %}

{% set view_name = "allies" %}

{% block content %}
  <div class="allies">
    <section class="allies-cover">
      <div class="allies-cover-info">
        <h1 class="allies-cover-title helvneue-bold">{{es.allies.cover.title}}</h1>
        <div class="allies-cover-desc-container">
          <p class="allies-cover-desc helvneue-light">{{es.allies.cover.descPt1}} <span class="helvneue">{{es.allies.cover.descBold}}</span> {{es.allies.cover.descPt2}}</p>
        </div>
      </div>
    </section>

    <section class="allies-cards">
      {% for card in es.allies.cards %}
      <div class="allies-cards-content">
        <img class="{{card.logoClass}}" src="{{card.logo}}">
        <div class="allies-cards-hover">
          <div class="allies-cards-hover-content">
            <h2 class="allies-cards-title">{{card.title}}</h2>
            <p class="allies-cards-desc">{{card.desc}}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </section>

    <section class="allies-cards-carousel owl-carousel">
      {% for card in es.allies.cards %}
      <div class="allies-cards-content">
        <img class="{{card.logoClass}}" src="{{card.logo}}">
        <div class="allies-cards-hover">
          <div class="allies-cards-hover-content">
            <h2 class="allies-cards-title">{{card.title}}</h2>
            <p class="allies-cards-desc">{{card.desc}}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </section>

    <section class="allies-donors">
      <h1 class="allies-donors-title helvneue-bold">{{es.homeAllies.donors.title}}</h1>
      <p class="allies-donors-desc helvneue-regular">{{es.homeAllies.donors.desc}}<br><span class="helvneue-bold">{{es.homeAllies.donors.descBold}}</span></p>
      <div class="allies-donors-container">
        <div class="allies-donors-content">
          {% for donor in es.homeAllies.donors.columnOne %}
          <span class="allies-donors-name helvneue-lightitalic">{{donor.name}}</span>
          {% endfor %}
        </div>
        <div class="allies-donors-content">
          {% for donor in es.homeAllies.donors.columnTwo %}
          <span class="allies-donors-name helvneue-lightitalic">{{donor.name}}</span>
          {% endfor %}
        </div>
        <div class="allies-donors-content">
          {% for donor in es.homeAllies.donors.columnThree %}
          <span class="allies-donors-name helvneue-lightitalic">{{donor.name}}</span>
          {% endfor %}
        </div>
        <div class="allies-donors-fadeout"></div>
      </div>
      <div class="allies-donors-collapsible-container">
        <div class="allies-donors-collapsible"></div>
      </div>
    </section>
  </div>
{% endblock %}
