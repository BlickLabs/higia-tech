{% extends "partials/base.njk" %}

{% block title %}Inicio{% endblock %}

{% set view_name = "homepage" %}

{% block content %}
  <div class="home">
    <div class="home-particles-container" id="home-particles-container">
      <div class="home-particles-absolute" id="home-particles-absolute">
        <div class="home-cover">
          <div class="home-cover-info">
            <h1 class="home-cover-title helvneue-light">{{es.home.cover.title}} <span class="helvneue-bold pink">{{es.home.cover.titleSpan}}</span></h1>
            <div class="home-cover-description-container">
              <p class="home-cover-description helvneue-light"><span class="helvneue-bold">{{es.home.cover.description[0]}} </span><span class="helvneue-bold pink">{{es.home.cover.description[1]}}</span><span class="helvneue-bold">, </span>{{es.home.cover.description[2]}}, <span class="helvneue-bold">{{es.home.cover.description[3]}} </span>{{es.home.cover.description[4]}} <span class="helvneue-bold">{{es.home.cover.description[5]}}</span> {{es.home.cover.description[6]}} <span class="pink helvneue-bold">{{es.home.cover.description[7]}}.</span></p>
            </div>
            <div class="home-cover-btn-container">
              <a href="">
                <button class="helvneue-medium btn-base btn-md">{{es.home.cover.btnPreorder}}</button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="home-eva">
      <div>
        <div class="home-eva-logo-container">
          <img class="home-eva-logo" src="{{es.home.eva.logo}}" alt="EVA logo">
        </div>
        <div class="home-eva-paragraph-container">
          <p class="home-eva-paragraph helvneue-light">
            <span class="pink helvneue-medium">{{es.home.eva.desc[0]}}</span> {{es.home.eva.desc[1]}} <span class="helvneue-medium">{{es.home.eva.desc[2]}}</span> {{es.home.eva.desc[3]}} <span class="pink helvneue-medium">{{es.home.eva.desc[4]}}</span>
          </p>
        </div>
      </div>
      <div class="home-eva-infographi">
        {% for infographi in es.home.eva.infographi %}
        <div class="{{infographi.imgContainer}}">
          <div class="mask-base {{infographi.maskClass}}"></div>
          <img class="{{infographi.imgClass}}" src="{{infographi.img}}" data-aos="{{infographi.imgAOS}}" data-aos-duration="{{infographi.imgAOSDuration}}">
          <div class="{{infographi.infoClass}}" data-aos="{{infographi.infoAOS}}" data-aos-duration="{{infographi.infoAOSDuration}}" data-aos-delay="{{infographi.infoAOSDelay}}">
            <img class="home-eva-infographi-bullet {{infographi.infoBulletClass}}" src="{{infographi.infoBullet}}">
            <div class="home-eva-infographi-text-container">
              {% if infographi.infoText %}<span class="home-eva-infographi-text helvneue-thin">{{infographi.infoText}}</span>{% endif %}
              <div>
                <span class="home-eva-infographi-text-bold bebasneue-bold pink">{{infographi.infoPink}}&nbsp;</span>{% if infographi.infoBlack %}<span class="home-eva-infographi-text-bold bebasneue-bold">{{infographi.infoBlack}}</span>{% endif %}
              </div>
              {% if infographi.infoText2 %}<span class="home-eva-infographi-text helvneue-thin">{{infographi.infoText2}}</span>{% endif %}
            </div>
          </div>
          {% if infographi.infoClass2 %}
          <div class="{{infographi.infoClass2}}" data-aos="{{infographi.infoAOS}}" data-aos-duration="{{infographi.infoAOSDuration}}" data-aos-delay="{{infographi.infoAOSDelay2}}">
            <img class="home-eva-infographi-bullet {{infographi.infoBulletClass}}" src="{{infographi.infoBullet}}">
            <div class="home-eva-infographi-text-container">
              <div>
                <span class="home-eva-infographi-text-bold bebasneue-bold">{{infographi.info2Black}}&nbsp;</span><span class="home-eva-infographi-text-bold bebasneue-bold pink">{{infographi.info2Pink}}</span>
              </div>
              <span class="home-eva-infographi-text helvneue-thin">{{infographi.info2Text}}</span>
            </div>
          </div>
          {% endif %}
        </div>
        {% endfor %}
      </div>
      <div class="home-eva-button-container">
        <a href="">
          <button class="helvneue-medium btn-base btn-md">{{es.home.eva.firstButton}}</button>
        </a>
        <a href="">
          <button class="helvneue-medium btn-base btn-white btn-md">{{es.home.eva.secondButton}}</button>
        </a>
      </div>
    </div>

    <div class="home-founder">
      <div class="home-founder-img-container">
        <img class="home-founder-img" src="{{es.home.founder.img}}">
      </div>
      <div class="home-founder-info">
        <h1 class="home-founder-title helvneue-light">{{es.home.founder.title}}</h1>
        <div class="home-founder-subtitle-container">
          <h2 class="home-founder-subtitle helvneue-bold">{{es.home.founder.subtitle}}</h2>
        </div>
        <div class="home-founder-paragraph-container">
          <p class="home-founder-paragraph helvneue-light">{{es.home.founder.descriptionOne}}</p>
        </div>
        <div class="home-founder-paragraph-container">
          <p class="home-founder-paragraph helvneue-medium">{{es.home.founder.descriptionTwo}}</p>
        </div>
        <div class="home-founder-button">
          <a href="#{{es.home.founder.dataModal}}" data-modal data-id="{{es.home.founder.videoId}}">
            <button class="helvneue-medium btn-base btn-sm">{{es.home.founder.button}}</button>
          </a>
        </div>
      </div>
    </div>

    <div id="{{es.home.founder.dataModal}}" class="modal">
      <video width="100%"data-video="{{es.home.founder.videoId}}" id="{{es.home.founder.videoId}}">
        <source src="{{es.home.founder.video}}" type="video/mp4">
      </video>
    </div>

    <div class="home-allies">
      <div class="home-allies-content">
        <h1 class="home-allies-title helvneue-bold">{{es.home.allies.title}}</h1>
        <div class="home-allies-description-container">
          <p class="home-allies-description helvneue-light">{{es.home.allies.description}}</p>
        </div>
        <div class="home-allies-carousel owl-carousel">
          {% for logo in es.home.allies.logos %}
          <div class="home-allies-carousel-content">
            <div class="home-allies-logo-container">
              <img class="{{logo.class}}" src="{{logo.img}}">
            </div>
            <h1 class="home-allies-name helvneue-medium">{{logo.title}}</h1>
          </div>
          {% endfor %}
        </div>
        <div class="home-allies-btn-container">
          <a href="">
            <button class="helvneue-medium btn-base btn-sm">{{es.home.allies.btnKnowMore}}</button>
          </a>
        </div>
      </div>
    </div>

    <div class="home-awards">
      <div class="home-awards-title-container">
        <h1 class="home-awards-title helvneue-bold">{{es.home.awards.title}}</h1>
      </div>
      <div class="home-awards-carousel owl-carousel">
        {% for award in es.home.awards.carousel %}
        <div class="home-awards-content">
          <div class="home-awards-img {{award.img}}">
            <div class="{{award.logoContainerClass}}">
              <img class="{{award.logoClass}}" src="{{award.logo}}">
            </div>
          </div>
          <div class="home-awards-info">
            <h1 class="home-awards-carousel-title helvneue-bold">{{award.title}}</h1>
            <div class="home-awards-separator"></div>
            <h3 class="home-awards-carousel-description helvneue-light">{{award.description}} <i>{{award.descriptionItalic}}</i></h3>
            <span class="home-awards-carousel-subtitle helvneue-lightitalic">{{award.year}}</span>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>

    <div class="home-news">
      <h1 class="home-news-title helvneue-bold">{{es.home.news.title}}</h1>
      <div class="home-news-carousel owl-carousel">
        {% for new in es.home.news.carousel %}
        <a href="{{new.link}}" target="_blank">
          <div class="home-news-card">
            <div>
              <img class="{{new.logoClass}}" src="{{new.logo}}">
            </div>
            <div class="home-news-separator"></div>
            <div class="home-news-description-container">
              <p class="home-news-description helvneue-light">{{new.description}}</p>
            </div>
            <span class="home-news-date helvneue-bold">{{new.date}}</span>
          </div>
        </a>
        {% endfor %}
      </div>
      <div class="home-news-btn-container">
        <a href="/es/news.html">
          <button class="helvneue-medium btn-base btn-lg">{{es.home.news.btnCompleteNotes}}</button>
        </a>
      </div>
    </div>
  </div>
{% endblock %}
